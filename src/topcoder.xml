<?xml version="1.0" encoding="UTF-8"?>
<config>
	
    <!--
	@param filePath - URL of wrapping page
	-->
    <function name="wrapPage">
        <return>
            <empty>


                <var-def name="content">
                    <html-to-xml>
                        <file action="read" path="${filePath}"/>
                    </html-to-xml>
                </var-def>                
                 
                 
               <var-def name="universityList">
       			    <xpath expression="//table[1]/tbody/tr/td[3]/table[2]/tbody/tr[1]/td/table/tbody/tr[*]">
           				<var name="content"/>
      			    </xpath>
   			   </var-def>
   		
   		
   		<!-- target: build all cities with their coordinates and description -->	   
       <loop item="university" index="i" empty="yes" filter="7-">
        <list>
            <var name="universityList"/>
        </list>
        <body>
            <empty>
                <var-def name="universityRank">
                    <xpath expression="//td[2]/text()">
                        <var name="university"/>
                    </xpath>
                </var-def>

                <var-def name="universityName">
                    <xpath expression="//td[3]/text()">
                        <var name="university"/>
                    </xpath>
                </var-def>

                <var-def name="universityCountry">
                    <xpath expression="//td[4]/text()">
                        <var name="university"/>
                    </xpath>
                </var-def>

                <var-def name="universityMembersCount">
                    <xpath expression="//td[5]/text()">
                        <var name="university"/>
                    </xpath>
                </var-def>

                <var-def name="universityRating">
                    <xpath expression="//td[6]/text()">
                        <var name="university"/>
                    </xpath>
                </var-def>
            </empty>
        </body>
    </loop>
    <!-- target: build all cities with their coordinates and description -->             
                
            </empty>
        </return>
    </function>

    
    <var-def name="files">
        <file action="list" path="src" listdirs="no" listfilter="*.html"/>
    </var-def>
    
    
    <!-- parsing of pages from the list --> 
    <loop item="file" index="i">
        <list>
            <var name="files"/>
        </list>
        <body>
            <empty>
                <call name="wrapPage">
                    <call-param name="filePath">
                        <var name="file"/>
                    </call-param>
                </call>
            </empty>
        </body>
    </loop>
    <!-- parsing of pages from the list -->  


</config>